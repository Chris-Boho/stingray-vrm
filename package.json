{
  "name": "stingray-vrm",
  "displayName": "stingray-vrm",
  "description": "handle and edit vrm files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "vrmEditor.editor",
        "displayName": "VRM Editor",
        "selector": [
          {
            "filenamePattern": "*.vrm"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "vrmEditor.openEditor",
        "title": "Open with VRM Editor"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .vrm",
          "command": "vrmEditor.openEditor",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-react": "^4.5.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.1",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
